<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="-"
        android:layout_marginTop="10dip"
        android:text="Add a new lead"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="20dip"
        android:layout_marginLeft="20dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="20dip"
            android:weightSum="4">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="Name"
                android:gravity="center"
                android:textColor="@color/txt_dark"
                android:background="@drawable/box"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="6dip"
                android:layout_weight="3"
                android:textColor="@color/txt"
                android:id="@+id/eName"
                android:background="@drawable/box"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:weightSum="4">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="Contact 1"
                android:gravity="center"
                android:textColor="@color/txt_dark"
                android:background="@drawable/box"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="6dip"
                android:textColor="@color/txt"
                android:layout_weight="3"
                android:id="@+id/eContact1"
                android:background="@drawable/box"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:weightSum="4">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="Contact 2"
                android:gravity="center"
                android:textColor="@color/txt_dark"
                android:background="@drawable/box"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="6dip"
                android:id="@+id/eContact2"
                android:textColor="@color/txt"
                android:layout_weight="3"
                android:background="@drawable/box"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:weightSum="4">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="Email"
                android:gravity="center"
                android:textColor="@color/txt_dark"
                android:background="@drawable/box"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="6dip"
                android:textColor="@color/txt"
                android:layout_weight="3"
                android:id="@+id/eEmail"
                android:background="@drawable/box"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:weightSum="4">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="Address"
                android:gravity="center"
                android:textColor="@color/txt_dark"
                android:background="@drawable/box"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="6dip"
                android:layout_weight="3"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:id="@+id/eAddress"
                android:lines="3"
                android:textColor="@color/txt"
                android:background="@drawable/box"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:weightSum="4">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="City"
                android:gravity="center"
                android:paddingTop="11dip"
                android:paddingBottom="7dip"
                android:paddingLeft="8dip"
                android:textColor="@color/txt_dark"
                android:background="@drawable/box"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="6dip"
                android:textColor="@color/txt"
                android:layout_weight="3"
                android:id="@+id/eCity"
                android:background="@drawable/box"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:weightSum="4">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="Group"
                android:gravity="center"
                android:paddingTop="11dip"
                android:paddingBottom="7dip"
                android:paddingLeft="8dip"
                android:textColor="@color/txt_dark"
                android:background="@drawable/box"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="6dip"
                android:textColor="@color/txt"
                android:layout_weight="3"
                android:id="@+id/eGroup"
                android:background="@drawable/box"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Lead"
                android:id="@+id/bAddLeads"
                android:textColor="@color/txt_dark"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/box_blue"/>
        </LinearLayout>
    </LinearLayout>

    </ScrollView>

</RelativeLayout>