

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7">

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <android.support.v7.widget.CardView
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="@drawable/gradient_avatar_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_margin="18dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/domePhoto"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/avatar"
                            />

                        <TextView
                            android:transitionName="Google"
                            android:clickable="true"
                            android:focusable="true"
                            android:textColor="@color/white"
                            android:id="@+id/welcome_user"
                            android:layout_marginBottom="5dp"
                            android:paddingTop="6dp"
                            android:paddingStart="18dp"
                            android:drawablePadding="11dp"
                            android:drawableLeft="@drawable/hello"
                            android:paddingEnd="18dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hi vidu"/>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/MyLeads"
                android:layout_width="match_parent"
                android:layout_gravity="bottom|center_horizontal"
                android:elevation="118dp"
                android:layout_height="match_parent"
                android:text="MY LEADS"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:drawablePadding="11dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:drawableStart="@drawable/ic_call"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:textColor="@color/white"
                android:background="@drawable/gradient_dashboard1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/Scheduledleads_card"
                android:layout_width="match_parent"
                android:layout_gravity="bottom|center_horizontal"
                android:elevation="118dp"
                android:layout_height="match_parent"
                android:text="FOLLOW UP"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:drawablePadding="11dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
                android:drawableStart="@drawable/ic_add_alarm_white"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:textColor="@color/white"
                android:background="@drawable/gradient_dashboard2"/>
            <!--<Button-->
                <!--android:textColor="@color/white"-->
                <!--android:textStyle="bold"-->
                <!--android:layout_marginStart="16dp"-->
                <!--android:layout_marginEnd="16dp"-->
                <!--android:drawablePadding="11dp"-->
                <!--android:drawableLeft="@drawable/hello"-->
                <!--android:textAllCaps="true"-->
                <!--android:text="MY LEADS"-->
                <!--android:drawableStart=""-->
                <!--android:background="@drawable/gradient_dashboard2"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/notification_card"
                android:layout_width="match_parent"
                android:layout_gravity="bottom|center_horizontal"
                android:elevation="118dp"
                android:layout_height="match_parent"
                android:text="NOTIFICATIONS"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:drawablePadding="11dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:drawableStart="@drawable/notification"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:textColor="@color/white"
                android:background="@drawable/gradient_dashboard3"/>
        </LinearLayout>
    </LinearLayout>
