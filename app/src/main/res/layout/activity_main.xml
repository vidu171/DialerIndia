<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/hamburger"
        android:layout_gravity="bottom|start"
        android:layout_width="56dip"
        android:layout_height="56dip">

    <ImageView
        android:tint="@color/lightGrey"
        android:layout_marginStart="20dip"
        android:layout_marginBottom="18dip"
        android:layout_gravity="bottom|start"
        android:layout_width="22dip"
        android:layout_height="22dip"
        android:src="@drawable/hamburger"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="-"
        android:layout_marginTop="10dip"
        android:text="Dialer India"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="56dip"
        android:layout_height="match_parent"
        android:orientation="vertical" android:weightSum="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="1"
            android:layout_height="0dip">
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="match_parent">
            <ImageView
                android:padding="@dimen/image_inner_padding"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/AddLeads"
                android:background="@drawable/circle_gray"
                android:src="@drawable/ic_text_format_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Leads"
                    android:textColor="@color/txt"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/MyLeads"
                    android:background="@drawable/circle_blue"
                    android:src="@drawable/ic_account_box_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Leads"
                    android:textColor="@color/txt"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="@dimen/image_inner_padding"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/FollowUp"
                    android:background="@drawable/circle_gray"
                    android:src="@drawable/ic_add_alarm_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Follow up"
                    android:textColor="@color/txt"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="1"
            android:layout_height="0dip">
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/answered"
                    android:padding="@dimen/image_inner_padding"
                    android:background="@drawable/circle_gray"
                    android:src="@drawable/ic_call_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Answered"
                    android:textColor="@color/txt"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="@dimen/image_inner_padding"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/notAnswered"
                    android:background="@drawable/circle_gray"
                    android:src="@drawable/ic_call_missed_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Answered"
                    android:textColor="@color/txt"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="@dimen/image_inner_padding"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/Pending"
                    android:background="@drawable/circle_gray"
                    android:src="@drawable/ic_call_end_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textColor="@color/txt"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="1"
            android:layout_height="0dip">
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="@dimen/image_inner_padding"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/profile"
                    android:background="@drawable/circle_gray"
                    android:src="@drawable/ic_sentiment_satisfied_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile View"
                    android:textColor="@color/txt"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="@dimen/image_inner_padding"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/Notifications"
                    android:background="@drawable/circle_gray"
                    android:src="@drawable/ic_event_note_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textColor="@color/txt"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="@dimen/image_inner_padding"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/settings"
                    android:background="@drawable/circle_gray"
                    android:src="@drawable/ic_settings_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textColor="@color/txt"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="1"
            android:layout_height="0dip">
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="@dimen/image_inner_padding"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/termsAndConnection"
                    android:background="@drawable/circle_gray"
                    android:src="@drawable/ic_error_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms Conditions"
                    android:textColor="@color/txt"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="@dimen/image_inner_padding"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_gray"
                    android:src="@drawable/ic_text_format_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Leads"
                    android:textColor="@color/txt"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="@dimen/image_inner_padding"
                    android:layout_width="64dp"
                    android:layout_height="64dp"

                    android:background="@drawable/circle_gray"
                    android:src="@drawable/ic_text_format_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Leads"
                    android:textColor="@color/txt"/>
            </LinearLayout>
            </LinearLayout>

        </LinearLayout>


</RelativeLayout>